<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.janeullah.textextractorfrommedia.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tweetExplainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explainer"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tweetIdField"
        android:layout_width="377dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:hint="@string/tweetId"
        android:autofillHints="Tweet id must be a long"
        app:layout_constraintTop_toBottomOf="@+id/tweetExplainer" />

    <Spinner
        android:id="@+id/textRecognizerTypeChosen"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/tweetIdField" />

    <Button
        android:id="@+id/submitTweetId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="12dp"
        android:text="@string/submit"
        app:layout_constraintTop_toBottomOf="@+id/textRecognizerTypeChosen" />


</android.support.constraint.ConstraintLayout>